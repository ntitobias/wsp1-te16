{
    "rules": {
        "eqeqeq": [
            2, 
            "allow-null"
        ],
        "curly": 2,
        "quotes": [
            2, 
            "single"
        ],
        "indent": [
            2,
            4
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "jquery": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
